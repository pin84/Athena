/*
    用于列表展示类样式
*/

  
.pushTemplateList
  width 100%
  height 100%
  background-color #fff
  font-size 0.3rem
  padding-bottom 0.2rem
  overflow scroll
  -webkit-overflow-scrolling touch
  h3
    text-align center
    
  .list
    padding 0 0.20rem
    .item
      background-color #f3f3f3
      border-radius 0.1rem
      margin-top 0.1rem
      padding 0.1rem 0.2rem
      box-sizing border-box
      display flex
      flex-direction column
      font-size 0.28rem
      .content_p
        width 100%
        display flex
        .title
          flex-basis: 30%
        .right
            width 70%
        &.hidden
          display none  
          

      .btnAndStatus
        display flex
        justify-content space-between 
        height 36px
        line-height 36px   
        .btn
          position relative
          span
            padding 1px 12px
            border 1px solid #333333
            border-radius 13px
            margin-right 15px
          .active
            color #09a2a3
            border 1px solid #09a2a3
        .status_0
          color #FF9900
        .status_1
          color #00CC00
        .status_2
          color #CC0033

      
